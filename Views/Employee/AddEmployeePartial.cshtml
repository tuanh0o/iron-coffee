<!--Modal Add Employee-->
<div class="modal fade in" id="modalAddEmployee" style="display: none">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Thêm nhân viên mới</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="box-body no-padding">
                        <div class="form-group">
                            <label>Họ và tên *</label>
                            <input type="text" class="form-control" id="iptNameAdd" placeholder="Họ và tên">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" id="iptPhoneAdd" placeholder="Số điện thoại">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" id="iptEmailAdd" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label>Tài khoản *</label>
                            <input type="text" class="form-control" id="iptAccountAdd" placeholder="Tài khoản">
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu *</label>
                            <input type="password" class="form-control" id="iptPasswordAdd" placeholder="Mật khẩu">
                        </div>
                        <div class="form-group">
                            <label>Nhập lại mật khẩu *</label>
                            <input type="password" class="form-control" id="iptConfirmPasswordAdd" placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button onclick="addEmployee()" type="button" class="btn btn-primary m-w-100">Lưu</button>
                <button type="button" class="btn btn-default m-w-100" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
