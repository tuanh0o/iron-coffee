 <!--Modal Add Category-->
<div class="modal fade in" id="modalCategoryAdd">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Thêm danh mục sản phẩm mới</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="iptCategoryNameAdd">Tên danh mục *</label>
                            <input type="text" class="form-control" id="iptCategoryNameAdd" placeholder="Nhập tên danh mục" autofocus>
                        </div>
                        <div class="form-group m-b-0">
                            <label for="txtCategoryNoteAdd">Ghi chú</label>
                            <textarea type="text" rows="4" class="form-control" id="txtCategoryNoteAdd" placeholder="Nhập ghi chú"> </textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="addCategory()" type="button" class="btn btn-primary m-w-100">Lưu</button>
                <button type="button" class="btn btn-default m-w-100" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
