<!-- Modal Sửa sản phẩm -->
<div id="modalEditProduct" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm sản phẩm</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="form-group" style="position: relative;">
                            <label>Ảnh sản phẩm</label>
                            <img id="imgProductEdit" class="img-avatar hand" src="/Images/default-product.png">
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            <label>Mã sản phẩm</label>
                            <input id="iptProductCodeEdit" type="text" class="form-control inputCapital" readonly>
                        </div>
                        <div class="form-group">
                            <label>Tên sản phẩm *</label>
                            <input id="iptProductNameEdit" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Danh mục sản phẩm *</label>
                            <select id="selCategoryEdit"></select>
                        </div>
                        <div class="form-group">
                            <label>Giá bán (VND) *</label>
                            <input id="iptPriceEdit" type="text" class="form-control autonumeric">
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnUpdate" class="btn btn-primary m-w-100">Lưu</button>
                <button type="button" id="btnDelete" class="btn btn-danger m-w-100 pull-left">Xóa</button>
                <button type="button" class="btn btn-default m-w-100" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>

