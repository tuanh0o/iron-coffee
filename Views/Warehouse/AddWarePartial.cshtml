<!-- Modal Thêm hàng hóa -->
<div id="modalWareAdd" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm hàng hóa</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="form-group" style="position: relative;">
                            <label>Ảnh hàng hóa</label>
                            <img id="imgWareAdd" class="img-avatar hand" src="~/Images/default-ware.jpg">
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            <label>Mã hàng hóa *</label>
                            <input id="iptWareCodeAdd" type="text" class="form-control inputCapital" placeholder="<có thể để trống>">
                        </div>
                        <div class="form-group">
                            <label>Tên hàng hóa *</label>
                            <input id="iptWareNameAdd" type="text" class="form-control" placeholder="Nhập tên hàng hóa" autofocus>
                        </div>
                        <div class="form-group">
                            <label>Đơn vị tính *</label>
                            <select id="selUnitAdd" class="form-control">
                            </select>
                        </div>
                        <div class="form-group m-b-0">
                            <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label>Giá nhập (VND) *</label>
                                        <input id="iptPriceInAdd" type="text" class="form-control autonumeric">
                                    </div>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label>Giá bán (VND) *</label>
                                        <input id="iptPriceSaleAdd" type="text" class="form-control autonumeric">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-b-0">
                            <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label>Tồn kho *</label>
                                        <input id="iptInStockAdd" type="text" class="form-control autonumeric">
                                    </div>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label>SL tồn kho khuyến nghị *</label>
                                        <input id="iptInStockRcmAdd" type="text" class="form-control autonumeric">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label>Nhà cung cấp</label>
                            <select id="selSupplierAdd" class="form-control">
                            </select>
                        </div>

                        <div class="form-group m-b-0">
                            <label>Ghi chú</label>
                            <textarea id="txtNoteAdd" type="text" class="form-control" rows="1"></textarea>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="addWare()" class="btn btn-primary m-w-100">Thêm</button>
                <button type="button" class="btn btn-default m-w-100" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>


